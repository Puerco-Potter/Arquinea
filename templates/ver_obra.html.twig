{% extends "index.html.twig" %}

{% block title %}ARQUINEA: Obras{% endblock %}
        
        {% block body %}
        <div class="container bg-light container-normal">
            <hr>
            <div class="d-flex justify-content-center fondo-negro">
                <div class="text-center">
                    <h2>
                        {{ publicacion.titulo }}
                    </h2>
                    <h3>
                        {{ publicacion.arquitecto }}
                    </h3>
                </div>
            </div>
            <hr>
            <div class="d-flex justify-content-center">
                <img src="{{asset('obras/imagenes/'~publicacion.imagen)}}" class="img-fluid">
            </div>
                
                
                {% autoescape false %}
                        {{ publicacion.descripcion }}
                {% endautoescape %}
                
                
                
                <p>
                    Facebook
                </p>
                <p>
                    Twitter
                </p>
                <div>
                    
                    <section
                    data-featherlight-gallery
                    data-featherlight-filter="a"
                    >
                    <h4>
                        Galeria de Fotos:
                    </h4>
                        {% for imagen in publicacion.imagenes %}
                            <a href="{{ asset('obras/imagenes/'~imagen.path) }}"><img src="{{ ('obras/imagenes/'~imagen.path) | imagine_filter('squared_thumbnail') }}"></a>
                        {% endfor %}
                    </section>
                </div>
                
                <hr>
        </div>
        {% endblock %}
